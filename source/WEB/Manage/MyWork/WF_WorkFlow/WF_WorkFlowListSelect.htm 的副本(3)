<script type="text/javascript">
    VerGlobal = Date();
    BaseUrl = "/DataAccess/WF_WorkFlowTBL/GetData_Select.ashx?m=GetDataList";
    CurrentRequestDataUrl = "";
    CurrentCondition = "";
	ValueField = "WorkFlowID";
    TextField = "WorkFlowName";
    SelectedValue = "";
    SelectedText = "";
</script>
